<%if @project.errors.any?%>
<ul>
	<%@project.errors.full_messages.each do |error_msg|%>
	<li><%= error_msg %></li>
	<%end%>
</ul>
<%end%>

<%= form_for [@concert] do |f|%>
	<%= f.label :name%>
	<%= f.text_field :name%>
	<br>
	<%= f.label :band%>
	<%= f.text_field :band%>
	<br>
	<%= f.label :venue%>
	<%= f.text_field :venue%>
	<br>
	<%= f.label :city%>
	<%= f.text_field :city%>
	<br>
	<%= f.label :date%>
	<%= f.date_field :date%>
	<br>
	<%= f.label :price%>
	<%= f.text_field :price%>
	<br>
	<%= f.label :description%>
	<%= f.text_field :description%>
	<br>
	<%= f.submit 'Save'%>
<%end%>	